{
  "name": "@smnandre/stimulus-listeners",
  "version": "1.0.0",
  "type": "module",
  "description": "A Stimulus plugin for declarative DOM event listeners via static `listeners` or explicit API.",
  "main": "dist/stimulus-listeners.umd.js",
  "module": "dist/stimulus-listeners.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/stimulus-listeners.es.js",
      "require": "./dist/stimulus-listeners.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "stimulus",
    "hotwired",
    "event",
    "listeners",
    "plugin",
    "symfony",
    "ux"
  ],
  "author": "smnandre",
  "license": "MIT",
  "peerDependencies": {
    "@hotwired/stimulus": "^3.0.0"
  },
  "dependencies": {
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/coverage-istanbul": "^3.1.4",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "happy-dom": "^17.5.6",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.4"
  }
}
